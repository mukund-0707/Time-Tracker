<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login Page</title>

    <!-- Matcha CSS Framework -->
    <link rel="stylesheet" href="https://matcha.mizu.sh/matcha.css" />

    <style>
      /* Full-screen background */
      body {
        background-image: url("https://t3.ftcdn.net/jpg/02/77/41/26/240_F_277412640_WVE1FmtHzgIiVCMTrTkvZC13dNzLD04Z.jpg");
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
        color: white;
      }

      /* Semi-transparent overlay for the form */
      .form-container {
        background-color: rgba(0, 0, 0, 0.6); /* Dark transparent background */
        padding: 40px;
        border-radius: 10px;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.5);
        max-width: 400px;
        width: 100%;
        text-align: center;
      }

      h1 {
        font-size: 2.5rem;
        margin-bottom: 20px;
      }

      label {
        display: block;
        margin: 10px 0 5px;
        font-weight: bold;
        text-align: left;
      }

      input[type="text"],
      input[type="password"] {
        width: 100%;
        padding: 10px;
        margin-bottom: 20px;
        border: 2px solid #ffd700; /* Gold border for better visibility */
        border-radius: 5px;
        font-size: 1rem;
        color: #000000; /* Change text color to white for contrast */
        background-color: rgb(255, 255, 255); /* Darker background for input fields */
      }

      button {
        background-color: #4caf50; /* Green button */
        color: white;
        padding: 10px 20px;
        border: none;
        border-radius: 5px;
        font-size: 1.2rem;
        cursor: pointer;
        transition: background-color 0.3s ease;
      }

      button:hover {
        background-color: #45a049; /* Darker green on hover */
      }

      a {
        color: #ffd700; /* Gold color for links */
      }

      a:hover {
        color: #fff; /* White on hover */
      }

      .error-msg {
        color: red;
        font-weight: bold;
        margin-bottom: 20px;
      }

      /* Style for show/hide password toggle */
      .toggle-password {
        cursor: pointer;
        color: #ffd700; /* Gold color for the toggle link */
        margin-top: -5px; /* Adjust margin for alignment */
      }

      .login_label {
        color: black;
      }
    </style>
  </head>
  <body>
    <div class="form-container">
      <h1>Login</h1>
      <% if (error_msg) { %>
      <p class="error-msg"><%= error_msg %></p>
      <% } %>
      <form action="/login" method="POST">
        <div class="login_label">
          <label for="username">Username:</label>
          <input
            type="text"
            name="username"
            id="username"
            placeholder="eg.mukund07"
            required
          />
        </div>

        <div class="login_label">
          <label for="password">Password:</label>
          <input
            type="password"
            name="password"
            id="password"
            placeholder="123456"
            required
          />
          <span class="toggle-password" onclick="togglePasswordVisibility()">Show</span>
        </div>

        <button type="submit">Login</button>
      </form>

      <p>Don't have an account? <a href="/register">Register here</a></p>
    </div>

    <script>
      // Placeholder removal for Username field
      const usernameInput = document.getElementById('username');

      usernameInput.addEventListener('focus', function () {
        this.setAttribute('data-placeholder', this.getAttribute('placeholder'));
        this.setAttribute('placeholder', '');
      });

      usernameInput.addEventListener('blur', function () {
        if (this.value === '') {
          this.setAttribute('placeholder', this.getAttribute('data-placeholder'));
        }
      });

      // Placeholder removal for Password field and Show/Hide toggle
      const passwordInput = document.getElementById('password');

      passwordInput.addEventListener('focus', function () {
        this.setAttribute('data-placeholder', this.getAttribute('placeholder'));
        this.setAttribute('placeholder', '');
      });

      passwordInput.addEventListener('blur', function () {
        if (this.value === '') {
          this.setAttribute('placeholder', this.getAttribute('data-placeholder'));
        }
      });

      function togglePasswordVisibility() {
        const toggleText = document.querySelector('.toggle-password');

        if (passwordInput.type === 'password') {
          passwordInput.type = 'text';
          toggleText.textContent = 'Hide';
        } else {
          passwordInput.type = 'password';
          toggleText.textContent = 'Show';
        }
      }
    </script>
  </body>
</html>
